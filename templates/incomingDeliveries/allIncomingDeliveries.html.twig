{% extends 'base.html.twig' %}
{% block title %}Neue Eingehende Lieferung {% endblock title %}
{% block body %}


    <h1>Eingegangene Lieferungen</h1>
    <a class="btn btn-primary mb-2" href="{{ path('incomingDelivery_new') }}">Neue Lieferung</a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Rechnungsnummer</th>
            <th>Produkt</th>
            <th>Anzahl</th>
            <th>Datum</th>
            <th>Aktionen</th>
        </tr>
        </thead>
        <tbody>
        {% for delivery in incomingDeliveries %}
            <tr>
                <td>{{ delivery.invoiceNumber }}</td>
                <td>{{ delivery.product }}</td>
                <td>{{ delivery.quantity }}</td>
                <td>{{ delivery.receiptDate.format('d.m.Y H:i') }}</td>
{#                <td></td>#}
                <td><a href="#" class="btn btn-dark btn-sm">Bald verf√ºgbar</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock body %}